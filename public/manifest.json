{
  "name": "Solpoch",
  "description": "Solana Wallet Extension",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_icon": "vite.svg"
  },
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "js/inject.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}