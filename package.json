{
  "name": "chrome-extention",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "lint": "eslint .",
    "build": "concurrently \"npm run build:chrome:main\" \"npm run build:chrome:inject\" \"npm run build:chrome:content\" \"npm run build:chrome:background\"",
    "build:chrome:main": "tsc -b && vite build --config vite.config.chrome.ts ",
    "build:chrome:inject": "tsc -b && vite build --config vite.config.chrome.inject.ts ",
    "build:chrome:content": "tsc -b && vite build --config vite.config.chrome.content.ts ",
    "build:chrome:background": "tsc -b && vite build --config vite.config.chrome.background.ts "
  },
  "dependencies": {
    "@solana/wallet-standard-features": "^1.3.0",
    "@solana/web3.js": "^1.98.4",
    "@tailwindcss/vite": "^4.1.18",
    "@wallet-standard/base": "^1.1.0",
    "@wallet-standard/core": "^1.1.1",
    "bs58": "^6.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.13.0",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/chrome": "^0.1.36",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.3.1",
    "vite-plugin-node-polyfills": "^0.25.0"
  }
}
